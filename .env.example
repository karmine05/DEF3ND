# SIGMA Detection Engineering Platform Environment Configuration
# Copy this file to .env and customize the values for your environment

# LLM Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Sync Settings
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_DAYS=7
MAX_SYNC_RETRIES=3

# Search Configuration
DEFAULT_SEARCH_LIMIT=100
MAX_SEARCH_RESULTS=1000
SEMANTIC_SEARCH_THRESHOLD=0.6

# UI Settings
ITEMS_PER_PAGE=20
MAX_DISPLAY_ITEMS=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=sigma_platform.log

# Security Settings
ENABLE_CUSTOM_RULES=true
ALLOW_RULE_DELETION=true
REQUIRE_RULE_VALIDATION=true

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_SYNCS=3

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_ATTACK_MAPPING=true
ENABLE_RULE_TESTING=false

# Database Configuration (Optional - uses defaults if not set)
# DATABASE_PATH=data/database/sigma_platform.db

# Custom Repository URLs (Optional)
# SIGMA_REPO_MAIN=https://github.com/SigmaHQ/sigma.git
# SIGMA_REPO_THREAT_HUNTING=https://github.com/SigmaHQ/sigma.git
# SIGMA_REPO_EMERGING_THREATS=https://github.com/SigmaHQ/sigma.git

# MITRE ATT&CK Data Sources (Optional)
# MITRE_ENTERPRISE_URL=https://raw.githubusercontent.com/mitre/cti/master/enterprise-attack/enterprise-attack.json
# MITRE_ICS_URL=https://raw.githubusercontent.com/mitre/cti/master/ics-attack/ics-attack.json
